# Odoo MCP Server Configuration
# Replace with your actual Odoo instance details
ODOO_URL=https://your-odoo-instance.com
ODOO_DATABASE=your_database_name
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_secure_password

# Optional: SSL Configuration
ODOO_SSL_VERIFY=true

# Optional: Connection timeout (seconds)
ODOO_TIMEOUT=30

# Optional: Default record limit for searches
ODOO_DEFAULT_LIMIT=100

# Server port (automatically set by Render)
PORT=8000